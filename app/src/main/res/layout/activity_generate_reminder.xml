<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.troubleshooters.diu.phrm.ActivityGenerateReminder">

    <TextView
        android:id="@+id/medicine_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Reminder Details"
        android:layout_margin="2dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@drawable/add_reminder_textview"/>

    <android.support.v7.widget.CardView
        android:id="@+id/cd_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_heading"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <EditText
            android:id="@+id/edit_text_redimder_info"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:layout_below="@+id/medicine_heading"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="start"
            android:textColor="#A4A4A4"
            android:hint="Reminder Information Here"
            android:background="@android:color/transparent"
            android:padding="10dp" />

    </android.support.v7.widget.CardView>
    <ListView
        android:id="@+id/listview_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cd_reminder"
        android:layout_marginTop="2dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"></ListView>
    <Button
        android:id="@+id/button_create_reminder"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/listview_reminder"
        android:text="Cteate reminder"
        android:layout_marginTop="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:textColor="#FFF"
        android:background="@drawable/button_rectangle_round_corner"/>

</RelativeLayout>
