<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="2"
    tools:context="com.troubleshooters.diu.phrm.BloodPressureActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BLOOD PRESSURE MEASUREMENT"
        android:gravity="center"
        android:inputType="number"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_margin="2dp"
        android:background="@drawable/list_view_calorie_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="20">

        <ImageView
            android:id="@+id/up_arrow_pressure"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/up_arrow"/>

        <EditText
            android:id="@+id/systolic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Systolic Blood Pressure"
            android:inputType="number"
            android:maxLength="3"
            android:padding="5dp"
            android:layout_margin="5dp"
            android:background="@drawable/edittext_rectangle_round_corner" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/down_arrow_pressure"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/down_arrow"
            android:layout_below="@id/up_arrow_pressure"/>

        <EditText
            android:id="@+id/diastolic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:maxLength="3"
            android:layout_margin="5dp"
            android:padding="5dp"
            android:hint="Diastolic Blood Pressure"
            android:background="@drawable/edittext_rectangle_round_corner"
            android:layout_toRightOf="@+id/down_arrow_pressure"
            android:layout_below="@+id/systolic"/>


    </LinearLayout>

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textColor="#FFF"
        android:background="@drawable/medication_creat_plan_button"/>

    <Button
        android:id="@+id/add_record_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add to record"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:textColor="#FFF"
        android:background="@drawable/medication_creat_plan_button"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/bplevel2"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        />






</LinearLayout>
