<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="5dp">
            <TextView
                android:id="@+id/card_view_heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#E16F6F"
                android:padding="5dp"
                android:textSize="15sp"
                android:text="Medicine name:"/>

            <TextView
                android:id="@+id/card_view_medicine_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_below="@+id/card_view_heading"
                android:text="ASpirin X2"/>
            <TextView
                android:id="@+id/card_view_time_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:text="7:00 AM"
                android:textSize="15sp"
                android:textColor="#764D4D"
                android:layout_alignParentRight="true"
                android:layout_alignBottom="@+id/card_view_repeat"
                />
            <TextView
                android:id="@+id/card_view_start_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:visibility="gone"
                android:layout_below="@+id/card_view_medicine_details"
                android:text="Start date:"/>
            <TextView
                android:id="@+id/card_view_repeat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:textSize="15sp"
                android:layout_marginTop="20dp"
                android:textColor="#764D4D"
                android:layout_below="@+id/card_view_start_time"
                android:text="Repeat:"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</RelativeLayout>