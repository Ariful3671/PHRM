<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#734b6d">

    <RadioGroup
        android:id="@+id/RG_gender"
        android:layout_width="270dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:orientation="horizontal"
        android:background="@drawable/edittext_rectangle_round_corner">
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/RG_image_view_male"
            android:src="@drawable/ic_gender_male"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"/>
        <RadioButton
            android:id="@+id/RB_male"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Male"/>
        <android.support.v7.widget.AppCompatImageView
            android:id="@+id/RG_image_view_female"
            android:src="@drawable/ic_gender_female"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:layout_marginLeft="30dp"/>
        <RadioButton
            android:id="@+id/RB_female"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Female"/>
    </RadioGroup>

</RelativeLayout>