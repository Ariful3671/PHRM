<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="1dp">

    <RelativeLayout
        android:id="@+id/background_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#D82C53"
        android:layout_margin="1dp">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:layout_centerVertical="true"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_toLeftOf="@+id/image_delete"
            android:textColor="#FFF"
            android:layout_marginRight="10dp"
            />
        <ImageView
            android:id="@+id/image_delete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/delete_pink"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>






    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/foreground_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.CardView
            android:id="@+id/card_report_details"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="1dp">



            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF">

                <TextView
                    android:id="@+id/hospitalName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Hospital :"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:paddingLeft="15dp"
                    android:paddingTop="15dp"
                    android:paddingBottom="15dp"
                    android:textColor="#E16F6F"/>
                <TextView
                    android:id="@+id/reportType"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hospitalName"
                    android:paddingLeft="15dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="15dp"
                    android:text="Report Type:"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#764D4D"
                    android:gravity="center"
                    />
                <TextView
                    android:id="@+id/save_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/hospitalName"
                    android:paddingLeft="10dp"
                    android:textColor="#764D4D"
                    android:paddingBottom="10dp"
                    android:paddingRight="15dp"
                    android:gravity="center"
                    android:paddingTop="20dp"
                    android:layout_alignParentRight="true"
                    android:text="Date"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    />

            </RelativeLayout>




        </android.support.v7.widget.CardView>

    </RelativeLayout>



</FrameLayout>