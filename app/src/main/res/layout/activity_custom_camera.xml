<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="10"
    tools:context="com.troubleshooters.diu.phrm.CustomCamera">


    <FrameLayout
        android:id="@+id/frameLayout_customCamera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8"></FrameLayout>

    <RelativeLayout
        android:id="@+id/buttonLayout_customCamera"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="#000">
        <Button
            android:id="@+id/shutter_customCamera"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_centerInParent="true"
            android:background="@drawable/shutter"/>
        <Button
            android:id="@+id/button_done"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:text="DONE"
            android:textStyle="bold"
            android:textColor="#D68910"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/shutter_customCamera"
            android:background="#000"
            android:layout_marginLeft="30dp"/>

    </RelativeLayout>



</LinearLayout>
