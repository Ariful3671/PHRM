<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.troubleshooters.diu.phrm.CreatMedicationPlanActivity">


    <TextView
        android:id="@+id/medicine_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="@string/medicines_information"
        android:layout_margin="2dp"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@drawable/list_view_calorie_background"/>
    <android.support.v7.widget.CardView
        android:id="@+id/cd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/medicine_heading"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <EditText
            android:id="@+id/edit_text_medicine_info"
            android:layout_width="match_parent"
            android:layout_height="315dp"
            android:layout_below="@+id/medicine_heading"
            android:layout_marginRight="2dp"
            android:layout_marginLeft="2dp"
            android:gravity="start"
            android:textColor="#A4A4A4"
            android:hint="@string/medicines_information_here"
            android:background="@android:color/transparent"
            android:padding="10dp" />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view_time"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:layout_below="@+id/cd">
        <Button
            android:id="@+id/time_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:background="@drawable/ic_action_set_time"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/click_icon_to_set_time_medication"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/card_view_time"
        android:layout_alignTop="@+id/card_view_time"/>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cd"
        android:layout_margin="5dp"
        android:visibility="gone"
        android:layout_toEndOf="@+id/time"
        >
        <Button
            android:id="@+id/date_button"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/ic_birthday_signup"
            />
    </android.support.v7.widget.CardView>
    <TextView
        android:id="@+id/date"
        android:layout_width="110dp"
        android:layout_height="wrap_content"
        android:text="Data"
        android:textStyle="bold"
        android:gravity="center"
        android:visibility="gone"
        android:layout_toRightOf="@+id/card_view_date"
        android:layout_alignBottom="@+id/card_view_date"
        android:layout_alignTop="@+id/card_view_date"/>
    <LinearLayout
        android:id="@+id/repeat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="2dp"
        android:layout_marginLeft="2dp"
        android:layout_below="@id/card_view_time"
        android:padding="3dp"
        android:gravity="center"
        android:background="@drawable/meal_reminder_background"
        android:orientation="horizontal"
        android:weightSum="7.5">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1.5"
            android:text="@string/repeat_medication_alerm"
            android:textStyle="bold"
            android:textSize="15sp"
            android:gravity="center"
            android:textColor="#F3D9FF"/>
        <CheckBox
            android:id="@+id/repeat_today_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:onClick="getStatusToday"
            android:text="@string/today_medication_alerm"/>
        <CheckBox
            android:id="@+id/repeat_everyday_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:onClick="getStatusEveryday"
            android:text="@string/everyday_medication_alerm"/>
        <CheckBox
            android:id="@+id/custom_checkbox"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="center"
            android:text="@string/custom_medication_alerm"
            android:onClick="customCheckBoxStatus"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3D9FF"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_below="@+id/repeat"
        android:orientation="horizontal"
        android:weightSum="7"
        android:visibility="gone"
        >
        <CheckBox
            android:id="@+id/sa"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12dp"
            android:text="Sa"
            android:onClick="getStatus"/>
        <CheckBox
            android:id="@+id/su"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Su"
            android:onClick="getStatus"/>
        <CheckBox
            android:id="@+id/mo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Mo"
            android:onClick="getStatus"/>
        <CheckBox
            android:id="@+id/tu"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Tu"
            android:onClick="getStatus"/>
        <CheckBox
            android:id="@+id/we"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="We"
            android:onClick="getStatus"/>
        <CheckBox
            android:id="@+id/th"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Th"
            android:onClick="getStatus"/>
        <CheckBox
            android:id="@+id/fr"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="12sp"
            android:text="Fr"
            android:onClick="getStatus"/>

    </LinearLayout>
    <Button
        android:id="@+id/create_plan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_marginBottom="3dp"
        android:padding="5dp"
        android:text="@string/creat_plan_medication"
        android:textColor="#FFF"
        android:layout_below="@+id/day"
        android:background="@drawable/medication_creat_plan_button"/>



</RelativeLayout>
