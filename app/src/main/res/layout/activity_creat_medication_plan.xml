<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/nutrition_grid_item_color"
    tools:context="com.troubleshooters.diu.phrm.CreatMedicationPlanActivity">





    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">




            <ImageView
                android:id="@+id/icon_create_medication_plan"
                android:layout_marginTop="30dp"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/medication_icon"/>




            <RelativeLayout
                android:id="@+id/medication_detail_relative_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/icon_create_medication_plan">
                <LinearLayout
                    android:id="@+id/medication_details_linear_layout"
                    xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:background="@drawable/layout_round_corner"
                    android:orientation="horizontal"
                    android:weightSum="100">
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_weight="50"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittext_rectangle_round_corner"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_weight="20"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittext_rectangle_round_corner"/>
                    <EditText
                        android:layout_width="0dp"
                        android:layout_height="38dp"
                        android:layout_weight="20"
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:background="@drawable/edittext_rectangle_round_corner"/>
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_margin="5dp"
                        android:layout_weight="10"
                        android:background="@drawable/delete_icon"/>
                </LinearLayout>





                <Button
                    android:id="@+id/add_button_medication_details"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:text="add items"
                    android:textColor="#FFF"
                    android:layout_below="@+id/medication_details_linear_layout"
                    android:background="@drawable/button_rectangle_round_corner"
                    android:layout_centerHorizontal="true" />
            </RelativeLayout>





            <LinearLayout
                android:id="@+id/time_date_linear_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:weightSum="2"
                android:layout_below="@+id/medication_detail_relative_layout">
                <RelativeLayout
                    android:id="@+id/time_relative_layout"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginRight="2dp"
                    android:layout_marginLeft="5dp"
                    android:background="@drawable/layout_round_corner"
                    android:layout_below="@+id/medication_details_realtive_layout">
                    <Button
                        android:id="@+id/button_time"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/clock_icon"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/date_relative_layout"
                    android:layout_width="0dp"
                    android:layout_height="150dp"
                    android:layout_weight="1"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp"
                    android:background="@drawable/layout_round_corner"
                    android:layout_below="@+id/medication_details_realtive_layout">
                    <Button
                        android:id="@+id/button_date"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_centerInParent="true"
                        android:background="@drawable/date_icon"
                        />
                </RelativeLayout>
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_below="@id/time_date_linear_layout"
                android:weightSum="100">
                <Button
                    android:id="@+id/button_creat"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="2dp"
                    android:textColor="#FFF"
                    android:background="@drawable/button_rectangle_round_corner"
                    android:text="CREAT"
                    />
                <Button
                    android:id="@+id/button_cancle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="50"
                    android:layout_marginRight="5dp"
                    android:layout_marginLeft="2dp"
                    android:textColor="#FFF"
                    android:background="@drawable/button_rectangle_round_corner"
                    android:text="CANCLE"
                    />
            </LinearLayout>



        </RelativeLayout>
    </ScrollView>





</RelativeLayout>
